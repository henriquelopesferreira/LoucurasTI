<%- include('../../partials/header.ejs') %>
    
    <body>
       <%- include('../../partials/navbar.ejs') %> 

       <h2>Artigos</h2> <br>
       <button><a href="/admin/articles/new">Criar nova categoria</a> </button>



       <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>descrição</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <% articles.forEach(article => { %>
                        <tr>
                                <td><%= article.id %></td>
                                <td><%= article.title %></td>
                                <td><%= article.slug %></td>
                                <td><%= article.body %></td>
                            
                            <td>
                                <form action="/articles/delete" method="POST" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                                    <input type="hidden" name="id" value="<%= article.id %>">
                                    <button class="btn btn-danger"> Deletar</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tr>
            </tbody>
       </table>
    </body>
<%- include('../../partials/footer.ejs') %></hr>
<script>
function confirmarDelecao(event, form) {
    event.preventDefault();
    var decision = confirm("Você quer deletar este artigo?");

    if (decision) {
        form.submit();
    } 
}
</script>