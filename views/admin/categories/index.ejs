<%- include('../../partials/header.ejs') %>
    
    <body>
       <%- include('../../partials/navbar.ejs') %> 

       <h2>Categorias</h2> <br>
       <button><a href="/admin/categories/new">Criar nova categoria</a> </button>



       <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <% categories.forEach(category => { %>
                        <tr>
                            <th><%= category.id %></th>
                            <th><%= category.title %></th>
                            <th><%= category.slug %></th>
                            <th>

                                <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning"> Editar</a>

                                <form action="/categories/delete" method="POST" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                                    <input type="hidden" name="id" value="<%= category.id %>">
                                    <button class="btn btn-danger"> Deletar</button>
                                </form>

                            </th>
                        </tr>
                    <% }) %>
                </tr>
            </tbody>
       </table>
    </body>
<%- include('../../partials/footer.ejs') %></hr>
<script>
function confirmarDelecao(event, form) {
    event.preventDefault();
    var decision = confirm("Você quer deletar essa categoria?");

    if (decision) {
        form.submit();
    } 
}
</script>